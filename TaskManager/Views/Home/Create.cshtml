@model Tsk
<form asp-action="Create" method="post" enctype="multipart/form-data">

    <input type="hidden" asp-for="Id" value="0" />
    <input type="hidden" asp-for="CreateDate" value="@DateTime.Today" />
    <input type="hidden" asp-for="ParentId" value="@ViewBag.ParentId" />
    <input type="hidden" asp-for="Status" value="@Statuses.Assigned" />
    <div class="form-group">
        <label>Заголовок</label>
        <input asp-for="Name" class="form-control" type="text" placeholder="Название задачи">
    </div>

    @*<div class="form-group">
            <label>Планируемая трудоемкость</label>
            <input asp-for="Laboriousness" class="form-control" type="text" placeholder="Сколько дней на выполнение">
        </div>*@

    <div class="form-group">
        <label>Исполнители</label>
        <input asp-for="Executors" class="form-control" type="text" placeholder="Кто должен ей заниматься">
    </div>


    <div class="form-group">
        <label>Описание</label>
        <textarea asp-for="Description" class="form-control" rows="3"></textarea>
    </div>

    <br>

    <button class="btn btn-primary btn-block" type="submit">Добавить</button>
</form>